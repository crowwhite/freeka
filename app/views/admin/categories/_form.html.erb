<div class='container'>
  <div class="well bs-component col-lg-6">
    <%= form_for([:admins, @category], html: { class: 'form-horizontal' }) do |f| %>
      <fieldset>
        <legend>Category</legend>
        <% if @category.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class='row'>
          <% if @is_sub_category %>
            <%= content_tag :div, class: 'field form-group', id: 'sub_category_select' do %>
              <%= f.label 'parent_id*', for: :parent_id, class: 'col-lg-3 control-label' %>
              <div class='col-lg-8'>
                <%= f.collection_select(:parent_id, Category.roots.all_except(@category.id), :id, :name, { prompt: 'Select Parent' }) %>
              </div>
            <% end %>
            <%= hidden_field_tag 'category[is_sub_category]', @is_sub_category %>
          <% end %>
        </div>

        <div class="field form-group">
          <div class='row'>
            <%= f.label 'name*', for: :name, class: 'col-lg-3 control-label' %>
            <div class='col-lg-8'>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="actions btn btn-primary">
          <%= f.submit %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
