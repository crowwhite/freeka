<% content_for :head do %>
  <meta property="og:title" content="<%= @requirement.title %>"/>
  <meta property="og:description" content="<%= @requirement.details.truncate(400) %>"/>
<% end %>
<%= javascript_include_tag 'comment_adder' %>
<%= javascript_include_tag 'http://js.pusher.com/2.2/pusher.min.js' %>
<%= render 'shared/fb_scripts' %>
<div class="row">
  <div class="row">
    <div class='row'>
      <div class='col-md-9'>
        <%= render 'layouts/category_menu' %>
      </div>
      <div class='col-md-3'>
        <%= render 'layouts/search_bar' %>
      </div>
    </div>
    <br>
    <div class="col-md-6 border-black height-800">
      <h2><%= @requirement.title.titleize %>
        <span class="fb-share-button" data-href=<%= requirement_url(@requirement) %> data-layout="button_count"></span>
      </h2>
      <div class='row'>
        <div class='col-md-12'>
          <div class='col-md-6 text-right'>
          </div>
          <div class='col-md-6 text-right'>
            <% if @requirement.pending? %>
              <%= render 'requirements/interested_donors.html.erb' %>
            <% end %>
          </div>
        </div>
      </div>
        <div class='col-md-12'>
        <%= image_tag (@requirement.image && @requirement.image.url(:medium)) || default_requirement_image_url, class: 'pull-left' %>
        </div>
        <div class='col-md-12'>
          <div class="well col-md-12">
            <h2>Comments</h2>
            <ul id="comments">
              <%= render partial: 'comments/comment', collection: @requirement.comments.includes(:user) %>
              <li id="add-comment">
              </li>
            </ul>
          </div>
        </div>
    </div>
    <div class="col-md-6">
      <div class='border-black height-800 scroll-auto padding-10'>
        <p>
          <pre>
            <%= @requirement.details %>
          </pre>
        </p>
        <strong>Requestor: </strong>
        <%= link_to @requirement.person.display_name, user_path(@requirement.person) %>
        <br>
        <br>
        <strong>Needed By: </strong>
        <%= @requirement.expiration_date %>
        <br>
        <h4>Supported Documents: </h4>
        <% @requirement.files.each do |attachment| %>
          <%= attachment.attachment_file_name %>: <%= link_to 'Download', attachment.url(:medium), target: '_blank' %><br>
        <% end %>
        <% if @requirement.files.size == 0 %>
          <span>No attached files.</span>
        <% end %>
        <br>
        <% if @requirement.interested_donors.size > 0 %>
          <h3>Interested Donors</h3>
          <ul id='donor-list'>
            <% @requirement.interested_donors.each do |donor| %>
              <li><%= link_to donor.display_name, user_path(donor) %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='row'>
      <div class='col-md-12'>
        <%= link_to 'Back', :back, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<%= hidden_field_tag :app_key, ENV['PUSHER_KEY'] %>
<br>
<br>
<br>
