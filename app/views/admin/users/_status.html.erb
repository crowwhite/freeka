<% if locals[:user].enabled %>
  <%= content_tag :td, id: 'status' + locals[:user].id.to_s do %>
    <%= link_to 'disable', toggle_status_admins_user_path(locals[:user], user: { enabled: false }), method: :put, remote: true %></td>
  <% end %>
<% else %>
  <%= content_tag :td, id: 'status' + locals[:user].id.to_s do %>
    <%= link_to 'enable', toggle_status_admins_user_path(locals[:user], user: { enabled: true }), method: :put, remote: true %></td>
  <% end %>
<% end %>