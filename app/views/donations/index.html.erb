<%= render 'shared/requirement/my_links' %>
<h1>Donations</h1>
<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Details</th>
    <th>Expiration Date</th>
    <th>Address</th>
    <th>Show Interest</th>
    <!-- <th></th> -->
  </thead>
  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= link_to donation.title, donation %></td>
        <td><%= donation.details %></td>
        <td><%= donation.expiration_date %></td>
        <td><%= Carmen::Country.coded(donation.address.try(:country_code)).try(:name) %></td>
        <td>
          <%= content_tag :span, id: 'interest' + donation.id.to_s do %>
            <%= render 'requirements/interest', locals: { requirement: donation } %>
          <% end %>
        </td>
        <%#= content_tag :td, id: 'donate' + donation.id.to_s do %>
            <%#= render 'donations/donate', locals: { donation: donation } %>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @donations %>