<% content_for :head do %>
  <meta property="og:title" content="<%= @requirement.title %>"/>
  <meta property="og:description" content="<%= @requirement.details.truncate(400) %>"/>
<% end %>
<%= javascript_include_tag 'faliure_link' %>
<%= javascript_include_tag 'comment_adder' %>
<%= javascript_include_tag 'http://js.pusher.com/2.2/pusher.min.js' %>
<%= render 'shared/fb_scripts' %>
<div class="row">
  <div class="row">
    <div class='row'>
      <div class='col-md-9'>
        <%= render 'layouts/category_menu' %>
      </div>
      <div class='col-md-3'>
        <%= render 'layouts/search_bar' %>
      </div>
    </div>
    <br>
    <div class="col-md-6 border-black height-800">
      <h2><%= @requirement.title %>
        <% if owner(@requirement) && @requirement.donor_requirements.size == 0 && !@requirement.fulfilled? %>
          <%= link_to 'Edit', edit_requirement_path(@requirement), class: 'btn btn-primary btn-xs' %>
        <% end %>
      </h2>
      <div class="scroll-auto height-725">
        <%= image_tag (@requirement.image && @requirement.image.url(:medium)) || 'http://2.bp.blogspot.com/-q-kaTpPqFc0/VAb_gK-IMWI/AAAAAAAAFk0/7oNpy4MBnXo/s1600/give-charity-donations.jpg', class: 'pull-left' %>
        <p><%= @requirement.details %></p>
        <strong>Requestor: </strong>
        <%= link_to @requirement.person.display_name, user_path(@requirement.person) %>
        <br>
        <br>
        <strong>Needed By: </strong>
        <%= @requirement.expiration_date %>
        <br>
        <h4>Supported Documents: </h4>
        <% @requirement.files.each do |attachment| %>
          <%= attachment.attachment_file_name %>: <%= link_to 'Download', attachment.url(:medium), target: '_blank' %><br>
        <% end %>
        <br>
        <div>
          <div class="fb-share-button" data-href=<%= requirement_url(@requirement) %> data-layout="button_count"></div>
        </div>
        <br>
        <div class='col-md-12'>
          <div class='pull-left row'>
            <%= render 'interested_donors' %>
          </div>
          <div class='pull-right'>
            <% if @requirement.fulfilled? %>
              <div> This requirement has been fulfilled. </div>
            <% else %>
              <% if @donor_requirement %>
                <%= render 'withdraw_donate' %>
              <% else %>
                <%= render 'interest_or_fulfill' %>
              <% end %>
            <% end %>
          </div>
        </div>
        <% if @requirement.interested_donors.size > 0 %>
          <%= render partial: 'donor', collection: @requirement.interested_donors %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">

      <div class="well height-800 top-pad-0">
        <h2>Comments</h2>
        <div class="height-630">
          <ul id="comments">
            <%= render @requirement.comments.includes(:user) %>
            <li id="add-comment">
            </li>
          </ul>
          <%= render 'comments/new_comment' %>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='row'>
      <div class='col-md-12'>
        <%= link_to 'Back', :back, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<%= hidden_field_tag :app_key, ENV['PUSHER_KEY'] %>
<br>
<br>
<br>
