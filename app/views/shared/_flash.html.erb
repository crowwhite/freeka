<% flash.each do |type, message| %>

  <% if type == 'notice' %>
    <% klass = 'alert-success' %>
  <% elsif type == 'alert' %>
    <% klass = 'alert-danger' %>
  <% end %>
  <%= content_tag :div, class: 'alert alert-dismissible ' + klass, role: 'alert' do %>
    <%= message %>
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
  <% end %>

<% end %>