<%= javascript_include_tag 'active_link' %>
<ul id="status_filter" class='active-buttons'>
  <% if current_admin %>
    <li><%= link_to 'Pending', filter_admins_requirements_path(requirement: { filter: { criteria: :status, value: 0 }, controller_action: @controller_action }), class: 'btn btn-primary active', role: 'button' %></li>
    <li><%= link_to 'Fulfilled', filter_admins_requirements_path(requirement: { filter: { criteria: :status, value: 2 }, controller_action: @controller_action }), class: 'btn btn-primary', role: 'button' %></li>
  <% else %>
    <li>
      <%= button_to requirements_path, class: 'btn btn-primary ' + add_class_if_active('pending'), role: 'button' do %>
        <text>Pending</text>
        <%= hidden_field_tag 'filter', 'pending' %>
      <% end %>
    </li>
    <li>
      <%= button_to requirements_path, class: 'btn btn-primary ' + add_class_if_active('fulfilled'), role: 'button' do %>
        <text>Fulfilled</text>
        <%= hidden_field_tag 'filter', 'fulfilled' %>
      <% end %>
    </li>
  <% end %>
</ul>